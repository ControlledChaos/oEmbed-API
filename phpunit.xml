<phpunit
	bootstrap="tests/bootstrap.php"
	backupGlobals="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	>
	<testsuites>
		<testsuite>
			<directory prefix="test-" suffix=".php">tests/</directory>
		</testsuite>
	</testsuites>

	<filter>
		<blacklist>
			<directory suffix=".php">.</directory>
		</blacklist>
		<whitelist>
			<directory suffix=".php">./includes</directory>
			<file>./includes/class-wp-legacy-oembed-controller.php</file>
			<file>./includes/class-wp-rest-oembed-controller.php</file>
			<file>./includes/functions.php</file>
			<file>./includes/template.php</file>
			<file>./wp-api-oembed.php</file>
		</whitelist>
	</filter>
</phpunit>
